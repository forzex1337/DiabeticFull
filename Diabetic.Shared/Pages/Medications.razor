@namespace Diabetic.Shared.Pages
@page "/medications"
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Medications</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-pill me-2"></i>Medications</h2>
            <p class="text-muted">Manage your medications and set reminders</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Add Medication
            </button>
        </div>
    </div>

    <div class="text-center text-muted py-5">
        <i class="bi bi-pill" style="font-size: 4rem;"></i>
        <h3 class="mt-3">Medication Management</h3>
        <p>This page will be implemented with medication tracking, reminder settings, and prescription management.</p>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        // Check if user is logged in
        var userId = await JSRuntime.InvokeAsync<string?>("localStorage.getItem", "userId");
        if (string.IsNullOrEmpty(userId))
        {
            // Redirect to login page if not authenticated
            Navigation.NavigateTo("/login");
            return;
        }
    }
}