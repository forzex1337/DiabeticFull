@namespace Diabetic.Shared.Layouts
@inject IJSRuntime JSRuntime

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ðŸ©º Diabetic</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill me-2"></i>Dashboard
            </NavLink>
        </div>
        @if (IsAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="glucose">
                    <i class="bi bi-graph-up me-2"></i>Glucose
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="meals">
                    <i class="bi bi-calendar me-2"></i>Meals
                </NavLink>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="food-search">
                <i class="bi bi-search me-2"></i>Food Search
            </NavLink>
        </div>
        @if (IsAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="insulin">
                    <i class="bi bi-droplet me-2"></i>Insulin
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="medications">
                    <i class="bi bi-pill me-2"></i>Medications
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="daily-notes">
                    <i class="bi bi-journal me-2"></i>Daily Notes
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="reports">
                    <i class="bi bi-file-earmark-text me-2"></i>Reports
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="profile">
                    <i class="bi bi-gear me-2"></i>Profile
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    [Parameter] public bool IsAuthenticated { get; set; } = false;
    
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}