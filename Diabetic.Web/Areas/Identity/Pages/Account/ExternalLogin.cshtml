@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Logowanie zewnętrzne";
}

<h1>@ViewData["Title"]</h1>
<h2>Łączenie konta @Model.ProviderDisplayName.</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <p>
            Zostałeś pomyślnie uwierzytelniony w serwisie <strong>@Model.ProviderDisplayName</strong>.
            Wprowadź swój adres e-mail dla tego serwisu poniżej i kliknij przycisk Zarejestruj się, aby zakończyć
            logowanie za pomocą tego konta.
        </p>
        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="name@example.com" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Imię" />
                <label asp-for="Input.FirstName">Imię</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" placeholder="Nazwisko" />
                <label asp-for="Input.LastName">Nazwisko</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="Input.DiabetesType" class="form-select" required>
                    <option value="">Wybierz typ cukrzycy</option>
                    <option value="Type1">Typ 1</option>
                    <option value="Type2">Typ 2</option>
                    <option value="Gestational">Ciążowa</option>
                    <option value="Other">Inny</option>
                </select>
                <label asp-for="Input.DiabetesType">Typ cukrzycy</label>
                <span asp-validation-for="Input.DiabetesType" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Zarejestruj się</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}